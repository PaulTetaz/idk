
<div class="container">
<div id="wrapper">
  <div id="wheel">
    <div id="inner-wheel">
      <div class="sec"><span><%= image_tag 'food_icon.png', class: "wheel-icons" %></span></div> <!-- food -->
      <div class="sec"><span class="fa fa-comment-o"></span></div> <!-- IDK -->
      <div class="sec"><span class="fa fa-smile-o"></span></div> <!-- drink -->
      <div class="sec"><span class="fa fa-heart-o"></span></div> <!-- adventure -->
      <div class="sec"><span class="fa fa-star-o"></span></div> <!-- IDK -->
      <div class="sec"><span class="fa fa-lightbulb-o"></span></div> <!-- chill -->
    </div>
    <div id="spin">

      <div id="inner-spin"></div>
    </div>

    <%= form_tag '/' %>
    <%= hidden_field_tag 'totalDegree', 0 %>

    <div id="shine"></div>
  </div>
</div>
</div>

<%= content_for(:after_js) do %>
  <%= javascript_pack_tag 'components/wheel' %>
<% end %>

<div class="footer">
    <div class="food footer-links">
      <%= image_tag 'food_icon.png', class: "footer-icons" %>
    </div>
    <div class="drinks footer-links">
      <%= image_tag 'drink.png', class: "footer-icons drinks-height" %>
    </div>
    <div class="adventure footer-links">
      <%= image_tag 'adventure.png', class: "footer-icons" %>
    </div>
    <div class="chill footer-links">
      <%= image_tag 'chill.png', class: "footer-icons" %>
    </div>
</div>

