<div class="wrapper">
  <div class="container">
    <% @events.each do |event| %>
      <%= link_to user_path(event.users.first) do %>
        <div class="feed-card">
          <div class="feed-card-left">
            <% if event.users.first.photo? %>
              <%= cl_image_tag(event.users.first.photo, width: 200, height: 200, crop: :fill, class:"avatar-large") %>
            <% else %>
              <%= image_tag('default-avatar.png', width: 200, height: 200, crop: :fill, class:"avatar-large") %>
            <% end %>
            <p> <strong><%=" #{event.users.first.first_name.capitalize} #{event.users.first.last_name.capitalize}" %></strong> <%= "is going to" %> <em><%= "#{event.activity.title}" %></em></p>
          </div>
          <div class="feed-card-right">
            <% time = "#{((Time.now - event.created_at) / 60).floor}m" %>
            <% if (((Time.now - event.created_at) / 60).floor) > 60 %>
              <% time = "#{(((Time.now - event.created_at) / 3600).floor)}h" %>
              <% if (((Time.now - event.created_at) / 3600).floor) > 24 %>
                <% time = "#{((Time.now - event.created_at) / (3600 * 24)).floor}d" %>
              <% end %>
            <% end %>
            <p id="time-feed"><%= time %></p>
          </div>
        </div>
        <hr>
      <% end %>
    <% end %>
  </div>
</div>
