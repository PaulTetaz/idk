<div class="wrapper">
  <%= link_to :back do %>
    <i class="fas fa-long-arrow-alt-left" style="font-size: 25px; margin: 5px 10px;"></i>
  <% end %>
  <div class="container text-center">
    <% if current_user.photo? %>
      <%= cl_image_tag(current_user.photo, width: 150, height: 150, crop: :fill, class:"avatar-xl") %>
    <% else %>
      <%= image_tag('default-avatar.png', width: 150, height: 150, crop: :fill, class:"avatar-xl") %>
    <% end %>
    <br>
    <button id="edit-profile-button"><%= link_to 'EDIT PROFILE', edit_user_registration_path %></button>
    <h1 class="page-title text-center"><%= "#{current_user.first_name.capitalize} #{current_user.last_name.capitalize}" %><strong class="logo-period-profile">.</strong> </h1>
    <div class="followers-followings-hostings">
      <div class="hostings">
        <p><%= current_user.events.count %></p>
        <p>Hostings</p>
      </div>
      <%= link_to followers_path(current_user.id) do %>
        <div class="followers">
          <p><%= current_user.followers.count %></p>
          <p>Followers</p>
        </div>
      <% end %>
      <%= link_to following_path(current_user.id) do %>
        <div class="followings">
          <p><%= Follower.where(follower_id: current_user.id).count %></p>
          <p>Following</p>
        </div>
      <% end %>
    </div>
    <div class="row">
      <% @events.each do |event| %>
        <div class="col-xs-4">
          <div class="profile-events">
            <%= link_to event_path(event) do %>
              <%= cl_image_tag event.activity.photo, class: 'avatar-large' %>
              <br>
              <% title = event.title.length > 10 ? "#{event.title.first(9)}..." : event.title %>
              <p style="margin: 0;"><%= title %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

