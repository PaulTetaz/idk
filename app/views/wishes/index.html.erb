<div class="row">
  <% @wish.each do |wish| %>
    <div class="col-xs-12">
      <%= link_to activity_path(wish.activity) do%>
      <div class="wish-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= wish.activity.photo %>');">
        <div class="wish-card-description">
          <h2><%= wish.activity.title.upcase %></h2>
          <div class="wish-card-sub-description">
            <p><%= wish.activity.price %></p>
            <p><%= Geocoder.search([wish.activity.latitude, wish.activity.longitude]).first.suburb %></p>
          </div>
        </div>
        <div class="heart-for-wish">
          <i class="fas fa-heart" style="color: #ED4956;"></i>
        </div>
      </div>
      <% end %>
    </div>
  <% end %>
</div>



