users = document.querySelector(".user_choices");
users.innerHTML = "";
<% @followers_array.each do |follower| %>
  followerAvatar = "<%= j render 'user_info', user: follower %>";
  users.insertAdjacentHTML('beforeend', followerAvatar);
<% end %>

