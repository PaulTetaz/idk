userChoices = document.querySelectorAll('.user_choice')
userChoices.forEach((choice) => {
  choice.addEventListener('click', () => {
    id = choice.dataset.userId
    document.getElementById(`user_avatar_${id}`).classList.toggle('active')
  })
})
